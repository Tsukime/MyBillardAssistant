<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.incoherentglitch.mybillardassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Billard Assistant"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Regles" />
        <activity android:name=".Scores"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".Advise" />
        <activity android:name=".Option" />
        <activity android:name=".UserArea" />
        <activity android:name=".Login"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".Register"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".ReglesAnglais" />
        <activity android:name=".ConseilsInternet" />
        <activity android:name=".ReglesFrancais" />
        <activity android:name=".ReglesSnooker" />
        <activity android:name=".ReglesAmericain"></activity>
    </application>

</manifest>