            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/I_A_3_Choix_des_couleurs"/>
        <LinearLayout
            android:id="@+id/magic_layout_couleur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/I_A_3_Choix_des_couleurs_1"
