                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/I_A_2_Départ_du_jeu_casse_2_list2_item2"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/I_A_2_Départ_du_jeu_casse_2_list2_item3"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/I_A_2_Départ_du_jeu_casse_2_list2_item4"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/I_A_2_Départ_du_jeu_casse_3_exception"/>
