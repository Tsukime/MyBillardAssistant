                    android:text="@string/I_A_2_Départ_du_jeu_casse_2_list1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/I_A_2_Départ_du_jeu_casse_2_list1_item1"
