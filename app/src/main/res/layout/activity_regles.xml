<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#007300"
    tools:context="com.incoherentglitch.mybillardassistant.Regles"
    >

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#730000">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#730000">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#730000">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="#730000">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cercles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/accepter"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/accepter"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/accepter"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/accepter"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="RÃ¨gles"
        android:textColor="#DDD96E"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="35dp"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menu_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <Button
            android:id="@+id/bouton_menu_regles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bouton_menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/bouton_billardFrancais"
            android:src="@drawable/drapeau_francais_bord"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/bouton_snooker"
            android:layout_toRightOf="@+id/bouton_snooker"
            android:layout_toEndOf="@+id/bouton_snooker"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <ImageButton
            android:id="@+id/bouton_poolAnglais"
            android:src="@drawable/drapeau_united_kingdom_bord"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/bouton_billardAmericain"
            android:layout_alignLeft="@+id/bouton_billardFrancais"
            android:layout_alignStart="@+id/bouton_billardFrancais" />

        <ImageButton
            android:id="@+id/bouton_snooker"
            android:src="@drawable/drapeau_india_bord"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/bouton_menu_regles"
            android:layout_alignLeft="@+id/bouton_menu_regles"
            android:layout_alignStart="@+id/bouton_menu_regles"
            android:layout_marginTop="40dp" />

        <ImageButton
            android:id="@+id/bouton_billardAmericain"
            android:src="@drawable/drapeau_america_bord"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/bouton_snooker"
            android:layout_alignLeft="@+id/bouton_snooker"
            android:layout_alignStart="@+id/bouton_snooker"
            android:layout_marginTop="30dp" />
    </RelativeLayout>
</RelativeLayout>